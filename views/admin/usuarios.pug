extends ../layout/app

block contenido

    h1(class="text-center font-extrabold text-2xl") Usuarios

    div(class="flex flex-col mt-8")
       div(class="overflow-x-auto sm:-mx-6 lg:-mx-8")
            div(class="inline-block min-w-full py-2 sm:px-6 lg:px-8")
                div(class="overflow-hidden")
                    table(class="min-w-full text-left text-sm font-light")
                        thead(class="border-b bg-neutral-800 font-medium text-white dark:border-neutral-500 dark:bg-neutral-900")
                            tr
                                th(scope="col" class="px-6 py-4") Ficha
                                th(scope="col" class="px-6 py-4") Nombre
                                th(scope="col" class="px-6 py-4") Correo
                                th(scope="col" class="px-6 py-4") Categoria
                                th(scope="col" class="px-6 py-4") Nivel
                                th(scope="col" class="px-6 py-4") Acciones
                        tbody
                            each usuario in usuarios
                                tr(class="border bg-neutral-300 border-black") 
                                    td(class="whitespace-nowrap border border-black px-6 py-4")= usuario.ficha                          
                                    td(class="whitespace-nowrap border border-black px-6 py-4")= usuario.nombre  
                                    td(class="whitespace-nowrap border border-black px-6 py-4")= usuario.correo
                                    td(class="whitespace-nowrap border border-black px-6 py-4")= usuario.categoria
                                    td(class="whitespace-nowrap border border-black px-6 py-4")= usuario.nivel
                                    td(class="whitespace-nowrap border border-black px-6 py-4")
                                        a(href=`/admin/editar-usuario/${usuario.ficha} ` class="text-center bg-green-600 w-full block rounded-sm") Editar
                                        form(action=`/admin/eliminar-usuario/${usuario.ficha}` method="post")
                                            input(type="hidden" name="_csrf" value=csrfToken)
                                            input(class="text-center cursor-pointer bg-red-600 w-full block rounded-sm mt-2" type="submit" value="Eliminar") 
block scripts
    script(src="/js/sidebar.js") 