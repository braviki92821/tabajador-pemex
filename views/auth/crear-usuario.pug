extends ../layout/app

block contenido

    div(class="mt-8 mx-auto max-w-screen-md")
        div.bg-white.py-8.px-4.shadow
            h1(class="text-center mt-5 font-bold text-2xl")=pagina
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores
                         p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
            form(class="space-y-5" action="/auth/nuevo-usuario" method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                div
                    label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="titulo") Num. Ficha
                    input(class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400" type="number" name="ficha" value=datos.ficha )
                div
                    label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="titulo") Nombre
                    input(class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400" type="text" name="nombre" value=datos.nombre )
                div
                    label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="titulo") Correo
                    input(class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400" type="email"  name="correo" value=datos.correo)
                div
                    label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="titulo") Categoria
                    input(class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400" type="text"  name="categoria" value=datos.categoria)
                div
                    label(class="block text-sm uppercase text-gray-900 mb-2 font-bold" for="nombre") Nivel
                    input(class="w-full px-3 py-2 border border-gray-600 rounded-md placeholder-gray-400" type="number" name="nivel" value=datos.nivel )
                input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit", value="Crear Usuario")
block scripts
    script(src="/js/sidebar.js") 